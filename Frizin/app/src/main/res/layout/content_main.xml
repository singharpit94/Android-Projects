<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="80dp"
        android:paddingBottom="@dimen/activity_vertical_margin"


        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="190dp"

            android:background="@drawable/main1"


            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/imageView1"
            android:text="Categories"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#ffffff"
            android:textColor="#2F4F4F"
            android:textSize="25dp"
            android:id="@+id/t0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_below="@id/t0">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/rl1"

                android:layout_weight="1"

                >
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/imageButton1"
                    android:background="@drawable/chicken"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/imageButton1"
                    android:text="Chicken"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:textColor="#2F4F4F"
                    android:textSize="25dp"
                    android:id="@+id/t1"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/mutton"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_below="@id/t1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/imageButton3"
                    android:text="Mutton"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:textColor="#2F4F4F"
                    android:textSize="25dp"
                    android:id="@+id/t2"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/imageButton5"
                    android:background="@drawable/egg"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_below="@id/t2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/imageButton5"
                    android:text="Eggs"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:textColor="#2F4F4F"
                    android:textSize="25dp"
                    android:id="@+id/t3"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                >


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/ready"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/imageButton2"
                    android:text="Ready"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:textColor="#2F4F4F"
                    android:textSize="25dp"
                    android:id="@+id/t4"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/imageButton4"
                    android:background="@drawable/fish"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_below="@id/t4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/imageButton4"
                    android:text="Fish"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:textColor="#2F4F4F"
                    android:textSize="25dp"
                    android:id="@+id/t5"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/imageButton6"
                    android:background="@drawable/dairy"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_below="@id/t5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/imageButton6"
                    android:text="Dairy"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:textColor="#2F4F4F"
                    android:textSize="25dp"
                    android:id="@+id/t6"/>
            </RelativeLayout>
        </LinearLayout>







    </RelativeLayout>

</ScrollView>